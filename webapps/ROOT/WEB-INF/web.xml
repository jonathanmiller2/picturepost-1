		<servlet-class>edu.unh.sr.picturepost_rest.GetPostAndPictureSets</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AddPicture</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.AddPicture</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AddPostPicture</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.AddPostPicture</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SetReferencePictureSetId</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.SetReferencePictureSetId</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GetPictureInfo</servlet-name>
		<url-pattern>/servlet/GetPictureInfo</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
