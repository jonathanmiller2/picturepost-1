<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<filter>
		<filter-name>AppFilter</filter-name>
		<filter-class>edu.unh.sr.picturepost.AppFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AppFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
	  <filter-name>CorsFilter</filter-name>
	  <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
	  <init-param>
	    <param-name>cors.allowed.methods</param-name>
	    <param-value>GET,POST,HEAD,OPTIONS,PUT</param-value>
	  </init-param>
	  <init-param>
	    <param-name>cors.allowed.headers</param-name>
	    <param-value>Content-Type,X-Requested-With,accept,Origin,Access-Control-Request-Method,Access-Control-Request-Headers</param-value>
	  </init-param>
	  <init-param>
	    <param-name>cors.exposed.headers</param-name>
	    <param-value>Access-Control-Allow-Origin,Access-Control-Allow-Credentials</param-value>
	  </init-param>
	  <init-param>
	    <param-name>cors.support.credentials</param-name>
	    <param-value>true</param-value>
	  </init-param>
	</filter>
	<filter-mapping>
	  <filter-name>CorsFilter</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
	


	<listener>
		<listener-class>edu.unh.sr.picturepost.StartupPicturepost</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>GetPictureInfo</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetPictureInfo</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetAutoScrollPictures</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetAutoScrollPictures</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AddPost</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.AddPost</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AddPictureSet</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.AddPictureSet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>IsValidMobilePhone</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.IsValidMobilePhone</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetPostList</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetPostList</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetGeoJSONPostList</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetPostList</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetPost</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetPost</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetPostPicture</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetPostPicture</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetPicture</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetPicture</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>GetPictureSet</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.GetPictureSet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>FlagPictureSet</servlet-name>
		<servlet-class>edu.unh.sr.picturepost_rest.FlagPictureSet</servlet-class>
	</servlet>

	<servlet>
